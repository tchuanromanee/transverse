<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".EncyclopediaFragment">


    <TextView
        android:id="@+id/basicsHeader"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="Basics"
        android:layout_weight="2" />


    <TextView
        android:id="@+id/transBasics"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Transgender"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dysphoriaBasics"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Dysphoria"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/sVgBasics"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sex vs. gender"
        android:layout_weight="1" />

</LinearLayout>